@model List<PokemonListDTO>

@{
    ViewData["Title"] = "Pokémons";
}

<div class="text-end">
    <a class="btn btn-primary mb-2" role="button" asp-controller="Pokemon" asp-action="Create">Novo Pokémon</a>
</div>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>Nome</th>
            <th class="text-center">Código</th>
            <th class="text-center">Ativo</th>
            <th class="text-center">Criado em</th>
            <th class="text-center">Atualizado em</th>
            <th class="text-center">Ações</th>
        </tr>
    </thead>

    @if (Model.Count == 0)
    {
        <tr>
            <td class="text-center" colspan="6">
                Não há pokémons cadastrados.
            </td>
        </tr>
    }
    else
    {
        @foreach (var pokemon in Model)
        {

            <tr class="align-middle">
                <td>
                    @pokemon.Name
                </td>
                <td class="text-center">
                    @pokemon.Code
                </td>
                <td class="text-center">
                    @(pokemon.Active ? "Sim" : "Não")
                </td>
                <td class="text-center">
                    @pokemon.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")
                </td>
                <td class="text-center">
                    @pokemon.UpdatedAt?.ToString("dd/MM/yyyy HH:mm:ss")
                </td>
                <td class="text-center">
                    <a class="btn btn-primary" role="button" asp-controller="Pokemon" asp-action="Edit" asp-route-id="@pokemon.Id">Editar</a>
                    <a class="btn btn-danger" role="button" asp-controller="Pokemon" asp-action="Delete" asp-route-id="@pokemon.Id">Excluir</a>
                </td>
            </tr>
        }
    }
</table>